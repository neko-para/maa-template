{
    "features": [
        {
            "name": "agent",
            "type": "single",
            "default": "none",
            "choices": [
                {
                    "name": "none",
                    "desc": "No agent"
                },
                {
                    "name": "python",
                    "desc": "Use python as agent",
                    "apply": [
                        "agent.python"
                    ]
                }
            ]
        },
        {
            "name": "misc",
            "type": "multi",
            "default": [],
            "choices": [
                {
                    "name": "issue",
                    "desc": "Add issue templates",
                    "apply": [
                        "github.issue"
                    ]
                },
                {
                    "name": "prettier",
                    "desc": "Use prettier to format json & yaml",
                    "apply": [
                        "formatter.prettier"
                    ]
                }
            ]
        }
    ]
}
